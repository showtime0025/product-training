{
  "Product": {
    "id": {
      "type": "string",
      "required": true,
      "description": "Unique identifier for the product"
    },
    "name": {
      "type": "string",
      "required": true,
      "description": "Product name"
    },
    "description": {
      "type": "string",
      "required": true,
      "description": "Product description"
    },
    "price": {
      "type": "number",
      "required": false,
      "minimum": 0,
      "description": "Product price in USD"
    },
    "image": {
      "type": "string",
      "required": false,
      "format": "uri",
      "description": "URL to product image"
    },
    "category": {
      "type": "string",
      "required": false,
      "description": "Product category"
    },
    "rating": {
      "type": "number",
      "required": false,
      "minimum": 0,
      "maximum": 5,
      "description": "Product rating out of 5"
    },
    "tags": {
      "type": "array",
      "required": false,
      "items": {
        "type": "string"
      },
      "description": "Product tags"
    }
  }
}
